{
  "compilerOptions": {
    "lib": ["dom", "es2020"],
    "target": "es2020",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    // "allowJs": true, # use as needed when pulling in non-ts libraries or converting JS projects.
    "outDir": "./dist",
    "noFallthroughCasesInSwitch": true,
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
